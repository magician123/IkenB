<Window x:Class="Steamboat.View.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Steamboat.View"
        mc:Ignorable="d"
        Title="Steamboat" Height="450" Width="738">
    <Grid>
        <StackPanel Margin="5"
                    Orientation="Horizontal"
                    HorizontalAlignment="Left"
                    Width="200"
                    Height="20">
            <Button Content="Produce Steamboat"
                    x:Name="buttonProduce"
                    Click="buttonProduce_Click"
                    Width="200"/>

        </StackPanel>
        <StackPanel Margin="296,5,152,10">
            <TextBlock Text="Results"/>
            <ListBox x:Name="listBoxResults"
                     Width="200"/>
        </StackPanel>
    </Grid>
</Window>
